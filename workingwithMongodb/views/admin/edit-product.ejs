<%- include('../includes/head.ejs') %>

<body>
    <%- include('../includes/nav.ejs') %>

    <div class="container">
        <div class="row">

            <form action="/admin/productsEdit" method="POST" class="">
                <div class="form-group">
                    <label for="name" class="wow">Enter Product Name</label>
                    <input type="text" class="form-control" id="name" value="<%= productForEdit.productName %>"
                        name="productName">
                    <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.</small> -->
                </div>
                <div class="form-group">
                    <label for="price" class="text-primary">Enter Price</label>
                    <input type="number" class="form-control" id="price" value="<%= productForEdit.productPrice %>"
                        name="productPrice">
                </div>
                <div class="form-group">
                    <label for="img" class="text-primary">Enter Image Url</label>
                    <input type="text" class="form-control" id="img" value="<%= productForEdit.imageUrl %>"
                        name="imageUrl">
                </div>
                <div class="form-group">
                    <label for="desc" class="text-primary">Enter Description</label>
                    <textarea class="form-control" id="desc" name="description"
                        rows="5"><%= productForEdit.description %></textarea>
                </div>
                <div class="form-group">
                    <input type="hidden" name="productId" value="<%= productForEdit._id %>">
                </div>

                <!-- <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div> -->
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>

    </div>



    <%- include('../includes/end.ejs') %>